<div class="container" mt-3>
  <div class="row">
    <div class="col-12">
      <h1>Our Cocktails</h1>
    </div>
  </div>
  <hr>

  <div>
   <%= image_tag "cocktail.jpg", alt: "Cocktail", width: 300 %>
  </div>
  <div><ul id="cocktails">
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to "#{cocktail.name}", cocktail_path(cocktail), class: "btn btn-primary"%>
      </li>
    <% end %>
  </div></ul>
</div>
